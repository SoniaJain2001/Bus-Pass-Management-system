@model BusPassManagementSystem.Models.passtype

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>passtype</h4>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Passtype" class="control-label"></label>
                <select class="form-control" name="Passtype" id="Passtype">
                    <option value="SchoolStudents">SchoolStudents</option>
                    <option value="CollegeStudents">CollegeStudents</option>
                    <option value="PhysicallyDisabled">PhysicallyDisabled</option>
                </select>
                <span asp-validation-for="Passtype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@{
    try
    {
        if(TempData["create"] !=null)
        {
            if(TempData["create"]=="1")
            {
                <script>
                swal("Good job!", "Pass Created Sucecssfully!", "success");
                </script>
            }
            else
            {
                <script>
                swal("Error", "Pass Creation Failed", "error");
                </script>
            }
        }
    }
    catch
    {
        
    }
}
 
